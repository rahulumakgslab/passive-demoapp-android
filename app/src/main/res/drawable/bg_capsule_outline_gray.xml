<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <!-- background -->
            <solid android:color="@android:color/transparent" />
            <!-- border -->
            <stroke android:width="1dp" android:color="@color/text_color_gray_d5" />

            <!-- corner roundness -->
            <corners android:radius="200dp" />

            <padding android:bottom="11dp" android:left="24dp" android:right="24dp" android:top="11dp" />
        </shape>
    </item>
</selector>