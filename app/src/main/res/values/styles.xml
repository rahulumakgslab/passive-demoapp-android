        <item name="android:layout_marginStart">@dimen/margin_large_32dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_large_32dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_large_24dp</item>
    </style>

    <style name="button_white" parent="button_text_parent">
        <item name="android:background">@drawable/bg_capsule_white</item>
        <item name="android:padding">@dimen/margin_mid_16dp</item>
    </style>

    <style name="button_white_with_gray_outline" parent="button_text_parent">
        <item name="android:background">@drawable/bg_capsule_outline_gray_white_solid</item>
    </style>


    <!--    How it works styles   -->
